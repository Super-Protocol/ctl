{
    "name": "@super-protocol/ctl",
    "version": "0.8.6-beta.7",
    "description": "A tool for publishing values in a secure and reliable way.",
    "main": "build/index.js",
    "author": "SuperProtocol",
    "bin": "build/index.js",
    "scripts": {
        "dev": "ts-node --transpileOnly ./src/index.ts",
        "build:prepare": "tsc -p tsconfig.build.json",
        "build:linux": "npm run build:prepare && pkg --target linux-x64 -o dist/spctl .",
        "build:mac": "npm run build:prepare  && pkg --target macos-x64 -o dist/spctl .",
        "build:mac:arm": "npm run build:prepare  && pkg --target macos-arm64 -o dist/spctl .",
        "format": "eslint --ext .ts . --fix",
        "generate:gql": "graphql-codegen --config gql-codegen.yml",
        "test": "jest",
        "bump": "npm version prerelease --preid=beta && npm run tag:publish",
        "patch:beta": "npm version prepatch --preid=beta && npm run tag:publish",
        "minor:beta": "npm version preminor --preid=beta && npm run tag:publish",
        "major:beta": "npm version premajor --preid=beta && npm run tag:publish",
        "patch": "npm version patch && npm run tag:publish",
        "minor": "npm version minor && npm run tag:publish",
        "major": "npm version major && npm run tag:publish",
        "tag:publish": "git push origin && git push origin $(git tag --points-at HEAD)"
    },
    "license": "MIT",
    "private": true,
    "dependencies": {
        "@amplitude/node": "^1.10.2",
        "@iarna/toml": "^2.2.5",
        "@super-protocol/dto-js": "^0.0.29",
        "@super-protocol/sdk-js": "2.1.0",
        "axios": "^0.27.2",
        "bip39": "^3.1.0",
        "cli-progress": "^3.9.1",
        "colors": "^1.4.0",
        "commander": "^8.3.0",
        "console-table-printer": "^2.11.0",
        "dotenv": "^10.0.0",
        "ethers": "^5.6.8",
        "fstream": "^1.0.12",
        "get-folder-size": "^2.0.0",
        "graphql": "^16.4.0",
        "inquirer": "^8.2.6",
        "luxon": "^2.4.0",
        "prettier": "^2.5.1",
        "semver": "^7.5.4",
        "tar": "^6.1.11",
        "uuid": "^9.0.1",
        "zlib": "^1.0.5",
        "zod": "^3.11.6",
        "zod-error": "^1.0.3"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^2.6.2",
        "@graphql-codegen/typescript": "2.4.8",
        "@graphql-codegen/typescript-graphql-request": "^4.4.6",
        "@graphql-codegen/typescript-operations": "^2.3.6",
        "@super-protocol/eslint-config-typescript": "^1.0.1",
        "@types/cli-progress": "^3.9.2",
        "@types/get-folder-size": "^2.0.0",
        "@types/inquirer": "^9.0.7",
        "@types/jest": "^28.1.7",
        "@types/luxon": "^2.3.2",
        "@types/tar": "^6.1.1",
        "@types/uuid": "^9.0.7",
        "jest": "^28.1.3",
        "pkg": "^5.5.2",
        "ts-jest": "^28.0.8",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    },
    "pkg": {
        "assets": [
            "config.example.json",
            "node_modules/@super-protocol/uplink-nodejs/build/Release/uplink.node",
            "node_modules/@super-protocol/sdk-js/node_modules/axios/**/*"
        ]
    }
}
